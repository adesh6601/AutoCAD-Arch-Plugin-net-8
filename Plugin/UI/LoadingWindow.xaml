<Window x:Class="Plugin.UI.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Processing" Height="150" Width="300" WindowStartupLocation="CenterScreen" 
        WindowStyle="ToolWindow" ResizeMode="NoResize"
        Topmost="True">
    <Grid>
        <TextBlock Text="Processing, please wait..." VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"/>
        <ProgressBar IsIndeterminate="True" VerticalAlignment="Bottom" Height="20"/>
    </Grid>
</Window>

