<Window x:Class="Plugin.UI.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Processing" Height="180" Width="450" WindowStartupLocation="CenterScreen" 
        WindowStyle="None" ResizeMode="NoResize" Topmost="True" AllowsTransparency="True" Background="Transparent">
    
    <Border CornerRadius="15" BorderBrush="#FF009688" BorderThickness="2" Background="#FFFFFF" 
            Effect="{DynamicResource {x:Static SystemParameters.DropShadow}}">

        <Grid Background="#FFFAFAFA" Margin="10,10,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Text -->
            <TextBlock Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" 
                       FontSize="16" FontWeight="Bold" TextWrapping="Wrap" 
                       Foreground="#FF009688" Margin="10">
                Please avoid closing or minimizing the window during processing.
                The drawing may open and close multiple times as the program extracts data from Xrefs.
            </TextBlock>

            <!-- Progress Bar with Rounded Corners -->
            <ProgressBar IsIndeterminate="True" VerticalAlignment="Bottom" Height="20" Margin="0,130,0,0" />
        </Grid>
    </Border>
</Window>
